<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="cm_category_form_view" model="ir.ui.view">
        <field name="name">cm.category.form</field>
        <field name="model">cm.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="deprecated"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cm_category_tree_view" model="ir.ui.view">
        <field name="name">cm.category.tree</field>
        <field name="model">cm.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="deprecated"/>
            </tree>
        </field>
    </record>

    <record id="cm_category_action" model="ir.actions.act_window">
        <field name="name">Category</field>
        <field name="res_model">cm.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="cm_category_menu" name="Category"
              parent="core_module.core_module_config_menu" action="cm_category_action"/>

</odoo>