<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="used_technology_form_view" model="ir.ui.view">
        <field name="name">used.technology.form</field>
        <field name="model">used.technology</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="deprecated"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="used_technology_tree_view" model="ir.ui.view">
        <field name="name">used.technology.tree</field>
        <field name="model">used.technology</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="deprecated"/>
            </tree>
        </field>
    </record>

    <record id="used_technology_action" model="ir.actions.act_window">
        <field name="name">Used Technology</field>
        <field name="res_model">used.technology</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="used_technology_menu" name="Used Technology"
              parent="core_module.core_module_config_menu" action="used_technology_action"/>

</odoo>