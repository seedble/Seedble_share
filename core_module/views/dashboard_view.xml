<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="cm_dashboard_form_view" model="ir.ui.view">
        <field name="name">cm.dashboard.form</field>
        <field name="model">cm.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="menu_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
                        <field name="rec_count"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cm_dashboard_kanban_view" model="ir.ui.view">
        <field name="name">cm.dashboard.kanban</field>
        <field name="model">cm.dashboard</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="menu_id"/>
                <field name="rec_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="o_dropdown_kanban dropdown" groups="core_module.group_core_module_admin">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown"
                                   data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                </div>
                            </div>
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details d-flex flex-column justify-content-between">
                                    <a name="open_menu_action" type="object" class="pb-3">
                                        <strong class="o_kanban_record_title"
                                                style="font-size: 17px;font-weight: bold;">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                    </a>
                                    <div class="row">
                                        <a class="col overflow-hidden text-start" type="object"
                                           name="open_menu_action">
                                            <t t-esc="record.rec_count.raw_value"/>
                                            <span>&#160;</span>
                                            <t t-esc="record.name.raw_value"/>
                                        </a>
                                        <div class="col" style="text-align: right;"
                                             groups="core_module.group_core_module_user">
                                            <button type="object" name="action_create_record"
                                                    class="btn btn-primary">
                                                <span>Create</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="cm_dashboard_action" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">cm.dashboard</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <menuitem id="cm_dashboard_menu" name="Dashboard" sequence="1"
              parent="core_module.core_module_menu" action="cm_dashboard_action"/>

</odoo>