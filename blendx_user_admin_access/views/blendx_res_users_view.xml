<odoo>
    <data>

        <record id="view_users_form_blendx" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form string="Users">
                    <header>
                        <button string="Send Password Reset Instructions"
                                type="object" name="action_reset_password"
                                attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        <button string="Send an Invitation Email"
                                type="object" name="action_reset_password" context="{'create_user': 1}"
                                attrs="{'invisible': [('state', '!=', 'new')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="avatar_128" invisible="1"/>
                        <field name="image_1920" widget='image' class="oe_avatar"
                               options='{"preview_image": "avatar_128"}'/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="e.g. John Doe" required="1"/>
                            </h1>
                            <field name="email" invisible="1"/>
                            <label for="login" string="Email Address"/>
                            <h2>
                                <field name="login" placeholder="e.g. email@yourcompany.com"/>
                            </h2>
                            <group>
                                <field name="partner_id" readonly="1" required="0" groups="base.group_no_one"
                                       attrs="{'invisible': [('id', '=', False)]}"/>
                                <field name="share" invisible="1"/>
                            </group>
                        </div>
                        <group name="group_main_blendx_user">
                            <field name="security_role_ids"
                                   widget="many2many_tags"
                                   options="{'color_field': 'color'}"
                            />
                            <field name="job_title_id"/>
                            <field name="seniority_level_id"/>
<!--                            <field name="blendx_department_id" invisible="1"/>-->
                            <field name="blendx_department_team_ids" string="Department and Teams">
                                <tree>
                                    <field name="name"/>
                                    <field name="team_member_id"/>
                                    <field name="blendx_department_id"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_res_users_blendx" model="ir.actions.act_window">
            <field name="name">Users(Blendx)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_users_form_blendx"/>
            <field name="search_view_id" ref="base.view_users_search"/>
            <field name="domain"
                   eval="[('groups_id','in',[ref('blendx_user_admin_access.group_blendx_user'), ref('blendx_user_admin_access.group_blendx_admin')])]"/>
        </record>
        <record id="action_res_users_view1_blendx" model="ir.actions.act_window.view">
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="base.view_users_tree"/>
            <field name="act_window_id" ref="action_res_users_blendx"/>
        </record>


        <menuitem action="action_res_users_blendx" id="menu_action_res_users_blendx" parent="menu_blendx_settings"
                  sequence="1"/>

    </data>
</odoo>
